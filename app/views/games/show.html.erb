<div class="container">
  <h1 class="text-center">Your game</h1>
  <div class="d-flex justify-content-center">
    <div class="cards">
      <% @cells.each do |cell| %>
        <%= link_to game_cell_path(@game, cell), method: 'put' do %>
          <div class="card-category">
          <%= cell.content%>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="text-center mt-5">
  <%= link_to "Play again", new_game_path, class:"btn btn-primary" %>
  </div>
</div>



